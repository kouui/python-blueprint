{
  "mcpServers": {
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "-e",
        "GITHUB_TOOLSETS",
        "-e",
        "GITHUB_READ_ONLY",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "github_pat_****",
        "GITHUB_TOOLSETS": "context,notifications,repos,issues,pull_requests,code_security",
        "GITHUB_READ_ONLY": "0"
      },
      "disabled": false,
      "alwaysAllow": []
    }
  }
}
